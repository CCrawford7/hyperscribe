{
  "manifest_version": 3,
  "name": "Quick Notepad",
  "description": "A minimalist popup notepad with smart tools, terminal styling, and persistent settings.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Notepad",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
