{
  "manifest_version": 3,
  "name": "Hyperscribe",
  "description": "A minimalist popup notepad with smart tools, terminal styling, and persistent settings.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hyperscribe",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "downloads"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://fonts.googleapis.com https://microsoft.github.io; font-src 'self' https://fonts.gstatic.com https://microsoft.github.io data:;"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "copy-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy all note text"
    },
    "download-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Download note as text file"
    },
    "clear-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Clear note text"
    },
    "toggle-theme-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle theme panel"
    }
  }
}
